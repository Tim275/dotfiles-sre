{
  "Dockerfile Python": {
    "prefix": ["dfpython", "dockerfile-python"],
    "body": [
      "FROM python:${1:3.12}-slim",
      "",
      "WORKDIR /app",
      "",
      "COPY requirements.txt .",
      "RUN pip install --no-cache-dir -r requirements.txt",
      "",
      "COPY . .",
      "",
      "EXPOSE ${2:8000}",
      "",
      "CMD [\"python\", \"${3:main.py}\"]",
      "$0"
    ],
    "description": "Dockerfile for Python"
  },
  "Dockerfile Go": {
    "prefix": ["dfgo", "dockerfile-go"],
    "body": [
      "# Build stage",
      "FROM golang:${1:1.22}-alpine AS builder",
      "",
      "WORKDIR /app",
      "COPY go.mod go.sum ./",
      "RUN go mod download",
      "",
      "COPY . .",
      "RUN CGO_ENABLED=0 GOOS=linux go build -o /app/main .",
      "",
      "# Final stage",
      "FROM alpine:latest",
      "",
      "RUN apk --no-cache add ca-certificates",
      "WORKDIR /root/",
      "",
      "COPY --from=builder /app/main .",
      "",
      "EXPOSE ${2:8080}",
      "CMD [\"./main\"]",
      "$0"
    ],
    "description": "Dockerfile for Go (multi-stage)"
  },
  "Dockerfile Node": {
    "prefix": ["dfnode", "dockerfile-node"],
    "body": [
      "FROM node:${1:20}-alpine",
      "",
      "WORKDIR /app",
      "",
      "COPY package*.json ./",
      "RUN npm ci --only=production",
      "",
      "COPY . .",
      "",
      "EXPOSE ${2:3000}",
      "",
      "CMD [\"node\", \"${3:index.js}\"]",
      "$0"
    ],
    "description": "Dockerfile for Node.js"
  }
}
